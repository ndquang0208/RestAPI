<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create">Create User</a>
    </div>
    <div class="edit-form-container">
        <h1>Edit User</h1>
        <form class="form-add-new" action="/edit-user/<%= user.id %>" method="post">
            <label for="username">Username:</label>
            <input class="input-group" type="text" id="username" name="name" value="<%= user.name %>" required><br>
            <label for="email">Email:</label>
            <input class="input-group" type="email" id="email" name="email" value="<%= user.email %>" required><br>
            <label for="address">Address:</label>
            <input class="input-group" type="text" id="address" name="city" value="<%= user.city %>" required><br>
            <button type="submit">Update User</button>
        </form>
    </div>
</body>

</html>